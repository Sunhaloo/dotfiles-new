general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "tztime local"

# Uncomment the following lines if you want to display the network status
# but without the IP address.
#
order += "network"

network {
    interface = "wlp2s0"
    format_up = "W: %speed"
    format_down = "W: down"
}
